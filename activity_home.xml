<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7">

    <!-- Các phần header, banner, promotion, super sale giữ nguyên như cũ -->

    <!-- Bottom Navigation sửa lại layout_weight -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFF"
        android:padding="8dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_home" />
            <TextView android:text="Trang chủ" android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_category" />
            <TextView android:text="Danh mục" android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_cart" />
            <TextView android:text="Giỏ hàng" android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_news" />
            <TextView android:text="Tin tức" android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
                <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_favorite" />
            <TextView android:text="Yêu thích" android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
